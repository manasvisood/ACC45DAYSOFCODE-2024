#include <bits/stdc++.h>

using namespace std;

int main() {
    int T;
    cin >> T;
    if (T >= 1 && T <= 100) {
        for (int i = 0; i < T; i++) {
            int X, Y;
            cin >> X >> Y;
            if (X >= 2 && X <= 12 && Y >= 1 && Y < X) {
                cout << ((4 * X) + Y) << endl;
            }
        }
    }
    return 0;

}
