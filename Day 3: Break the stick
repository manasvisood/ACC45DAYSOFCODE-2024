#include <iostream>
using namespace std;

int main() {
    int T;
    cin >> T;
    
if (T >= 1 && T <= 1000) {
  for (int i = 0; i < T; i++) {
     int N, X;
     cin >> N >> X;
            
     if(N>X&&N<=1000000000&&X>=1){
       if (N % 2 == 0||X % 2 == 0) {
         cout<<"YES" <<endl;
        } 
        else {
             cout<< "NO" << endl;
        }
     }
  }
}   
return 0;
}
