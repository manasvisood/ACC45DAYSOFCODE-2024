#include <bits/stdc++.h>
using namespace std;

int main() {
  int T;
  cin>>T;
  if(T>=1&&T<=1000){
   for(int i=0;i<T;i++){
          int N,X;
          cin>>N>>X;
 if((N>=1&&N<=100)&&(X>=1&&X<=1000)){
     if(N==1){
     cout<<X<<endl;
     continue;
     }
     else if(N%6==0){
     cout<<((N*X)/6)<<endl;
     continue;
     }
     else if(N%6!=0)
     cout<<((N/6)+1)*X<<endl;
 }

      }
  }
return 0;
}
